set ts=4
set sw=4
colorscheme torte
set expandtab
set backspace=2
set ff=unix
set so=5
set nu "set line numbers
set is "search-as-you-type
set ci "case-insensitive
set hlsearch
set laststatus=2 
set ruler
syntax on
set ai

filetype plugin indent on

" Tabs
" switching tabs on shift+tab
map <s-tab> :tabn<CR>
" new tab on ctrl+n
map <C-n> :tabe<CR>
