alias cd..='cd ..'
alias vi='vim'
alias cgrep='grep --color=always'
alias ll='ls -al'

# Grails
alias gr='grails -reloading run-app -echoOut -plain-output'
alias gt='grails test-app -echoOut -plain-output'
alias gc='grails clean-all && grails compile'
alias gct='gc && gt'

# Gradle
alias gw='./gradlew'
